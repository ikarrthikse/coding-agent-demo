# Non-root user security setup using pre-built JAR
FROM amazoncorretto:21-alpine
WORKDIR /app

# Install CA certificates for SSL support
RUN apk add --no-cache ca-certificates

# Define arguments for user and group
ARG APP_USER_UID=10001
ARG APP_GROUP_GID=10001

# Create a group and user
RUN addgroup -g ${APP_GROUP_GID} -S appgroup && \
    adduser -u ${APP_USER_UID} -S appuser -G appgroup

# Copy the pre-built JAR from host libs folder
COPY build/libs/demo-0.0.1-SNAPSHOT.jar app.jar

# Change ownership of the application JAR to the non-root user
RUN chown appuser:appgroup app.jar

# Switch to the non-root user
USER appuser

# Expose port and define entrypoint
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
